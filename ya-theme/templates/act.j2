{% macro make_artist(act_id, img_url, description_text_list, time, venue, venue_link, photographer=none) %}

{% set modal_id = "modal_for_" + act_id %}
{% set modal_content_path = "acts/" + act_id + ".html" %}

<div class="modal" id="{{- modal_id -}}">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head is-hidden-tablet">
      <button class="delete" aria-label="close"></button>
    </header>
    <section class="modal-card-body">
        <button class="modal-close is-large" aria-label="close"></button>
        <div class="block">
            <p><a href="{{ venue_link }}">{{ venue }}</a> // {{ time }}</p>
            {% include modal_content_path %}
        </div>
    </section>
  </div>
</div>


<div class="card js-modal-trigger act-card" data-target="{{- modal_id -}}" id="{{ act_id }}">
    <div class="card-image">
        <img src="{{- img_url -}}" alt="Image of {{ act_id }}">
        {% if photographer %}
            <figcaption><footer><small class="photo-copyright-note">(photo: {{ photographer|lower }})</small></footer></figcaption>
        {% endif %}
    </div>
    <div class="card-content">

      <header class="card-header">
            <div class="columns pb-0 mb-0">
<p class="description-text is-size-4">
            {% for description_text in description_text_list %}
                {{ description_text|upper }}
            {% endfor %}
            </p>
            </div>
        </header>

        <p class="ya-text is-size-5">{{ venue }} // {{ time }}</p>

    </div>
</div>

{% endmacro %}

