{% macro get_navigation_link(title_dict, link, language, use_upper=false, class="ya-menu-link") %}

    {% set content = title_dict[language] %}

    {% if use_upper %}
        {% set content = content|upper %}
    {% endif %}

    <a href="{{ SITEURL }}/{{ link }}{% if language == "en" %}{{ "/en" }}{% endif %}" class={{ class }}>
        {{ content }}
    </a>

{% endmacro %}
