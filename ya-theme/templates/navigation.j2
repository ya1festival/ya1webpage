{% macro get_navigation_url(site_url, link, language) %}
    {%- set href = "/" + link -%} 
    {%- if language == "en" -%}
        {% set href = href + "/en" -%} 
    {%- endif -%}
    {{- href -}}
{% endmacro %}

{% macro get_navigation_link(
    title_dict,
    link,
    language,
    site_url,
    use_upper=false,
    class="ya-menu-link"
) %}

    {% set content = title_dict[language] %}

    {% if use_upper %}
        {% set content = content|upper %}
    {% endif %}

    <a href="{{ get_navigation_url(site_url, link, language) }}" class={{ class }}>
        {{- content -}}
    </a>

{% endmacro %}
